{
  "extends": "@cobaltcore-dev/aurora-config/typescript/react-app.json",
  "include": ["src/**/*.ts", "src/**/*.tsx", "vitest.setup.ts", "scripts/*.ts"],
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,

    "paths": {
      "extensions/*": ["./extensions/node_modules/*"],
      "extensions/server": ["./extensions/server.ts"],
      "extensions/client": ["./extensions/client.ts"]
    }
  }
}
