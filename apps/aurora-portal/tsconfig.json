{
  "extends": "@cobaltcore-dev/aurora-config/typescript/tsconfig.react.json",
  "include": ["src/**/*.ts", "src/**/*.tsx", "vitest.setup.ts", "scripts/**/*.ts"],
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "strict": true,
    "incremental": false,

    "types": ["vite/client", "vitest/globals", "vite-plugin-svgr/client", "@testing-library/jest-dom"]
  }
}
