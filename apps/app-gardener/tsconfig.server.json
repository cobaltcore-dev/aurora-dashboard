{
  "compilerOptions": {
    "module": "CommonJS",
    "esModuleInterop": true,
    "outDir": "./dist/standalone",
    "rootDir": "./src/standalone",
    "target": "ESNext",
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src/standalone/server.ts"],
  "exclude": ["node_modules", "dist", "src/client", "src/interface", "src/bff"] // Exclude the node_modules and dist directories
}
