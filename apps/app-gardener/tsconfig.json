{
  "extends": "@cobaltcore-dev/aurora-config/typescript/tsconfig.react.json",
  "compilerOptions": {
    "declaration": true,
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "skipLibCheck": true,
    "target": "ESNext",
    "types": ["vite/client", "vitest/globals"],
    "strict": true,
    "strictNullChecks": true,
    "paths": {
      "@/*": ["./src/*"]
    }
  },

  "include": ["src/**/*.ts", "src/**/*.tsx", "vitest.setup.ts"]
}
