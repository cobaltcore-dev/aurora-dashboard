{
  "extends": "./tsconfig.base.json",
  "references": [{ "path": "../config/tsconfig.server.json" }],
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": false,
    "emitDeclarationOnly": true,
    "outDir": "../dist/client",
    "strict": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "moduleResolution": "Node",
    "module": "ESNext",
    "target": "ESNext",
    "rootDir": "../src/client",
    "types": ["vite/client", "vitest/globals"]
  },
  "include": ["../src/client", "../src/types", "../src/server/routers"],
  "exclude": ["../src/server"]
}
