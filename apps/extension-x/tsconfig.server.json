// tsconfig.server.json (for server)
{
  "compilerOptions": {
    "module": "CommonJS",
    "esModuleInterop": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "target": "ESNext",
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true
  },
  "include": ["src/server.ts", "src/bff/**/*.ts", "src/interface/bff.ts", "src/interface/index.ts"],
  "exclude": ["node_modules", "dist", "src/client", "src/interface/client.ts"] // Exclude the node_modules and dist directories
}
