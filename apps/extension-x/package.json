    "@types/node": "^22.15.21",
    "@types/react": "^19.1.5",
    "@types/react-dom": "^19.1.5",
    "@vitejs/plugin-react": "^4.4.1",
    "@vitejs/plugin-react-swc": "^3.9.0",
    "typescript": "^5.8.3",
    "vite-plugin-dts": "^4.5.4"
  },
  "dependencies": {
    "@fastify/static": "^8.2.0",
    "@fastify/vite": "^8.0.5",
    "@trpc/client": "11.1.2",
    "@trpc/server": "11.1.2",
    "fastify": "^5.3.3",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "tsx": "^4.19.4",
    "vite": "^6.3.5",
    "vitest": "^3.1.4",
    "zod": "^3.25.20"
  }
