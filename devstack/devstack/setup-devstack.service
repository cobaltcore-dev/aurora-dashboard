[Unit]
Description=setup devstack

[Service]
User=stack
Type=oneshot
ExecStartPre=/bin/sleep 10
ExecStartPre=/usr/bin/sudo /usr/bin/ovs-vsctl set-manager ptcp:6640
ExecStart=/opt/stack/devstack/stack.sh
ExecStartPost=/bin/bash -c 'echo "Setup-Devstack Successful" > /opt/stack/setup-devstack-done'
ExecReload = /usr/bin/kill -HUP $MAINPID
KillMode = process
StandardOutput=tty

[Install]
WantedBy=multi-user.target
