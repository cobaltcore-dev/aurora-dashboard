{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": ["PORT"],
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "cache": true
    },
    "lint": {
      "cache": true
    },
    "typecheck": {
      "cache": true,
      "dependsOn": ["^build"]
    },
    "test": {
      "cache": true,
      "dependsOn": ["^build"]
    },
    "dev": {
      "cache": true,
      "persistent": true
    },
    "clean": {
      "cache": false
    },
    "clean:cache": {
      "cache": false
    },
    "check-and-compile": {
      "cache": true,
      "dependsOn": ["^build"]
    }
  }
}
