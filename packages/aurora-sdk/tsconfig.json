{
  "extends": "@cobaltcore-dev/aurora-config/typescript/tsconfig.lib.json",
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "dist",
    "isolatedModules": true,
    "skipLibCheck": true,
    "strict": true,
    "moduleResolution": "node",

    "declaration": false,
    "declarationMap": false,
    "emitDeclarationOnly": false,
    "stripInternal": true,

    "jsx": "react-jsx",
    "module": "ESNext",
    "target": "ESNext",
    "types": ["vite/client", "vitest/globals"]
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "src/**/*.test.ts", "src/**/*.test.tsx"]
}
