{
  "name": "@cobaltcore-dev/aurora-sdk",
  "version": "1.0.0",
  "description": "Package for provide basic SDK functionality for BFF and Client",
  "author": "UI-Team",
  "license": "Apache-2.0",
  "private": false,
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/types/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js",
      "types": "./dist/types/index.d.ts"
    },
    "./client": {
      "import": "./dist/esm/client/index.js",
      "require": "./dist/cjs/client/index.js",
      "types": "./dist/types/client/index.d.ts"
    },
    "./server": {
      "import": "./dist/esm/server/index.js",
      "require": "./dist/cjs/server/index.js",
      "types": "./dist/types/server/index.d.ts"
    }
  },
  "files": [
    "dist/**",
    "LICENCE"
  ],
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "test": "vitest run",
    "test:watch": "vitest --watch",
    "lint": "eslint ",
    "dev": "vite",
    "build:esm": "tsc --project tsconfig.esm.json",
    "build:cjs": "tsc --project tsconfig.cjs.json",
    "build:types": "tsc --project tsconfig.types.json",
    "build": "rm -rf dist && pnpm run build:esm && pnpm run build:cjs && pnpm run build:types",
    "typecheck": "tsc --project tsconfig.json --noEmit",
    "clean": "rm -rf dist && rm -rf node_modules && rm -rf .turbo",
    "clean:cache": "rm -rf .turbo"
  },
  "dependencies": {
    "@cobaltcore-dev/signal-openstack": "workspace:*",
    "@fastify/cookie": "^11.0.2",
    "@fastify/static": "^8.0.3",
    "@testing-library/jest-dom": "^6.5.0",
    "@trpc/client": "11.0.0-rc.730",
    "@trpc/server": "11.0.0-rc.730",
    "@types/node": "^22.10.5",
    "dotenv": "^16.4.7",
    "fastify": "^5.3.2",
    "globals": "^15.14.0",
    "jsdom": "^24.1.1",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@cobaltcore-dev/aurora-config": "workspace:*",
    "@types/node": "^20.11.24",
    "typescript": "^5.5.4",
    "vite": "^6.2.7",
    "vite-plugin-dts": "^4.5.3",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.1.4"
  }
}
